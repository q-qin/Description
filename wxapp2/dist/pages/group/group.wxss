.container {
  color: #fff;
}
.sup {
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
}
.content {
  padding: 20rpx 20rpx 100rpx;
  font-size: 22rpx;
  line-height: 34rpx;
  margin-left: -20rpx;
}
.content::after {
  content: '';
  display: block;
  position: relative;
  clear: both;
}
.box {
  width: 345rpx;
  float: left;
  margin-left: 20rpx;
  margin-bottom: 40rpx;
}
.h {
  padding: 20rpx;
  background: #404c57;
  line-height: 1;
}
.item {
  background: #333d46;
  padding: 20rpx;
  margin-bottom: 2rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item.sel {
  background: #16b13a;
}
.info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.img {
  width: 52rpx;
  margin-right: 6rpx;
}
.cir {
  width: 34rpx;
  height: 34rpx;
  box-sizing: border-box;
  border-radius: 100%;
  border: 2rpx solid #ccc;
}
.submit {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 0;
  padding: 0;
  margin: 0;
  background: #888;
  color: #fff;
}
.submit.ok {
  background: #ec6f3d;
}
.submit::after {
  display: none;
}
.random {
  position: absolute;
  top: 90rpx;
  right: 20rpx;
  padding: 0;
  margin: 0;
  background: #ec6f3d;
  color: #fff;
}
