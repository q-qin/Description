}
.random {
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  padding: 0;
  margin: 0;
  background: #ec6f3d;
  color: #fff;
}
.guider {
  z-index: 5;
  position: absolute;
  top: 160rpx;
  left: 20rpx;
  background: #ec6f3d;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.guider::before {
  content: '';
  position: absolute;
  display: block;
  border-bottom: 12rpx solid #ec6f3d;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  bottom: 100%;
  left: 30rpx;
}
.guider view {
  padding: 20rpx;
}
.guider .close {
  border-left: 2rpx solid #bd4515;
}
button.friend {
  position: relative;
  overflow: visible;
}
.gss {
  position: absolute;
  bottom: 100%;
  margin-bottom: 12rpx;
  left: 50%;
  margin-left: -100rpx;
  width: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #ec6f3d;
  color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.4;
  opacity: 0;
  transform: scale(0);
  transform-origin: 50% 100%;
}
.gss::before {
  content: '';
  position: absolute;
  display: block;
  border-top: 12rpx solid #ec6f3d;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  top: 100%;
  left: 50%;
  margin-left: -12rpx;
}
.gssani {
  animation: gssani 3s linear 3s 1 normal;
}
@keyframes gssani {
  0%,
  100% {
    opacity: 0;
    transform: scale(0);
  }
  10% {
    opacity: 1;
    transform: scale(1.1);
  }
  15% {
    opacity: 1;
    transform: scale(0.9);
  }
  17% {
    opacity: 1;
    transform: scale(1.05);
  }
  18%,
  90% {
    opacity: 1;
    transform: scale(1);
  }
  99% {
    opacity: 0;
    transform: scale(1.2);
  }
}
