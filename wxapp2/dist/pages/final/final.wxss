/* 队旗 */
.team-icon {
  position: absolute;
  width: 42rpx;
  height: 28rpx;
  background: #333d46;
}
.ttop .team-icon {
  top: 0;
}
.tbottom .team-icon {
  bottom: 0;
}
.gleft .team-icon {
  left: 0;
}
.gright .team-icon {
  right: 0;
}
.team-img {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 2;
}
.team-img::after {
  content: '';
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100rpx;
  height: 80rpx;
  margin-top: -40rpx;
  margin-left: -50rpx;
}
/* 队名 */
.team-name {
  position: absolute;
  top: 100%;
  left: 50%;
  width: 120rpx;
  margin-left: -60rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
  line-height: 28rpx;
}
/* 标位 */
.team-num {
  position: absolute;
  top: 0;
  width: 40rpx;
  line-height: 28rpx;
  font-size: 18rpx;
  text-align: center;
  color: #fff;
}
.gleft .team-num {
  left: -40rpx;
}
.gright .team-num {
  right: -40rpx;
}
/* 标位前线 */
.linepoint {
  position: absolute;
  top: 50%;
  height: 4rpx;
  width: 20rpx;
  background: #333d46;
  margin-top: -2rpx;
}
.gleft .linepoint {
  left: -26rpx;
}
.gright .linepoint {
  right: -26rpx;
}
.grounp0 .linepoint {
  width: 4rpx;
  height: 30rpx;
  left: 50%;
  margin-left: -2rpx;
  margin-top: 109rpx;
}
/* 线条 */
.linebox {
  position: absolute;
  top: 0;
  box-sizing: border-box;
  width: 26rpx;
  height: 100%;
}
.ttop .linebox {
  padding-top: 14rpx;
}
.tbottom .linebox {
  padding-bottom: 14rpx;
}
.gleft .linebox {
  right: 0;
}
.gright .linebox {
  left: 0;
}
.g2 .linebox {
  width: 4rpx;
}
.g2 .ttop .linebox {
  padding-top: 34rpx;
}
.g2 .tbottom .linebox {
  padding-bottom: 34rpx;
}
.g2.gleft .linebox {
  right: 26rpx;
}
.g2.gright .linebox {
  left: 26rpx;
}
.g1 .linebox {
  width: 28rpx;
  top: 50%;
  margin-top: -2rpx;
}
.g1 .gleft .linebox {
  right: -32rpx;
}
.g1 .gright .linebox {
  left: -32rpx;
}
.line {
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  border-style: solid;
  border-color: #333d46;
  border-width: 0;
}
.ttop .line {
  border-top-width: 4rpx;
}
.tbottom .line {
  border-bottom-width: 4rpx;
}
.gleft .line {
  border-right-width: 4rpx;
}
.gright .line {
  border-left-width: 4rpx;
}
.g1 .line {
  border-left: 0;
  border-right: 0;
  border-top-width: 4rpx;
}
.bei {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 114rpx;
  margin-left: -57rpx;
  margin-top: 40rpx;
}
